<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?dividerHorizontal"
    android:orientation="vertical"
    android:background="#ffffff"
    android:showDividers="middle">


    <LinearLayout
        android:layout_height="?actionBarSize"
        android:background="@color/menu_text_active"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
        android:id="@+id/back"
        android:layout_gravity="center"
        android:src="@mipmap/ic_ab_arrow_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
        <TextView
        android:id="@+id/title"
        android:textColor="@color/background_gainsboro"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"/>
        <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pl_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/pl_countdown_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:gravity="center|bottom"
            android:textColor="@color/error"
            android:textAppearance="?android:textAppearanceSmall"/>

        <!--<TextView-->
            <!--android:id="@+id/pl_message_text_error"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="0.5"-->
            <!--android:gravity="center|bottom"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:textAppearance="?android:textAppearanceSmall"-->
            <!--android:textColor="@color/error"-->
            <!--/>-->

        <me.tornado.android.patternlock.PatternView
            android:layout_marginTop="20dp"
            android:id="@+id/pl_pattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/viewspan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9" />


        <TextView
            android:id="@+id/bottomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center|top"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pl_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/pl_left_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/pl_right_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>
</LinearLayout>
