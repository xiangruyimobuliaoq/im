<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Space contains text -->
    <item android:state_focused="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#efeeee"/>
            <stroke android:width="1dp" android:color="#e6e3e3" />
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#efeeee"/>
            <stroke android:width="1dp" android:color="#e6e3e3" />
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#efeeee"/>
            <stroke android:width="1dp" android:color="#e6e3e3" />
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    <!-- PinEntryEditText is not focused -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#efeeee"/>
            <stroke android:width="1dp" android:color="#e6e3e3" />
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</selector>